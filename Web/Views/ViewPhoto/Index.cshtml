@model IEnumerable<Photos.Models.Photo>

@{
    Layout = null;
}

<html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/resource/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/resource/css/templatemo-style.css")" rel="stylesheet" type="text/css" />
    <title>View Photos</title>
</head>
<body>
    <div class="fixed-header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Lattuce Home Site</a>
            </div>
            <nav class="main-menu">
                <ul>
                    <li><a href="@Url.Content("~/home/index")">Home1</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="container">
    <section class="col-md-12 content" id="home">
        <div class="col-lg-6 col-md-6 content-item">
            <img src="/resource/images/1.jpg" alt="Image" class="tm-image">
        </div>
        <div class="col-lg-6 col-md-6 content-item content-item-1 background">
            <h2 class="section-title">Lattuce Website</h2>
            <p class="section-text">.......</p>
        </div>
    </section>

    @foreach (var item in Model)
    {
        <section class="col-md-12 content padding" id="photoalbums@item.photo_id">
            <div class="col-lg-6 col-md-6 content-item">
                <img src="@item.Location@item.FileName" alt="Image" class="tm-image-thumbnail">
            </div>
            <div class="col-lg-6 col-md-6 content-item content-item-1 background">
                <h2 class="section-title">@item.FileName</h2>
                <p class="section-text">@item.AlbumName<br />@item.Location</p>
            </div>
        </section>
    }

    </div>

    <div class="text-center footer">
        <div class="container">
            Copyright @@2016 Lattuce

            | Design: <a href="http://www.templatemo.com/tm-477-puzzle" target="_parent" title="Puzzle Template">Puzzle</a>
        </div>
    </div>
    <script src="@Url.Content("~/resource/js/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/resource/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/resource/js/jquery.singlePageNav.min.js")" type="text/javascript"></script>


    <script>
        // Check scroll position and add/remove background to navbar
        function checkScrollPosition() {
            if($(window).scrollTop() > 50) {
              $(".fixed-header").addClass("scroll");
          } else {
              $(".fixed-header").removeClass("scroll");
          }
        }

        $(document).ready(function () {
            // Single page nav
            $('.fixed-header').singlePageNav({
                offset: 59,
                filter: ':not(.external)',
                updateHash: true
            });

            checkScrollPosition();

            // nav bar
            $('.navbar-toggle').click(function(){
                $('.main-menu').toggleClass('show');
            });

            $('.main-menu a').click(function(){
                $('.main-menu').removeClass('show');
            });
        });

        $(window).on("scroll", function() {
            checkScrollPosition();
        });
    </script>



</body>
</html>
