@model IEnumerable<Photos.Models.Playlist>
<div class="page-header">
    <h1>All Playlists</h1>
</div>

@foreach (var item in Model)
{
    <div>
        <div>
            <h2>@item.PlaylistName</h2>
            <div class="btn-group pull-right" role="group" aria-label="...">
                <a class="btn btn-primary" href="/Music/View/@item.Id" role="button"><span class="glyphicon glyphicon-eye-open"></span> View</a>
                <a class="btn btn-default" href="/Music/Edit/@item.Id" role="button"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            </div>
        </div>
    </div>
    <div>
        <div>
            by @item.Owner
            <span class="glyphicon glyphicon-time"></span> Last Update @item.DatePosted
        </div>
    </div>
    <hr>
}

<br />
<div class="btn-group" role="group" aria-label="...">
    <a class="btn btn-primary" href="/Music/Edit/0" role="button">Create New Playlist</a>
</div>

