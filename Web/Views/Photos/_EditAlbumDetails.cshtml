@model Photos.Models.Album

<div class="modal-body">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit Album</h4>
    </div>
    <form action="/Photos/Save" method="post">
        <input type="hidden" id="AlbumId" name="AlbumId" value="@Model.Id" />

        <div class="modal-body">
            <div class="form-group">
                <label for="Date">Date</label>


         



                        <div class='input-group date' id='AlbumDate'>
                            <input type='text' name="AlbumDate" class="form-control" value="@Model.AlbumDate" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar" style="cursor: pointer;"></span>
                            </span>
                        </div>

                <script type="text/javascript">
                    $(function () {
                        $('#AlbumDate').datetimepicker({
                            format: 'DD-MMM-YYYY'
                        });
                    });
                </script>

                <span class="add-on"><i class="icon-th"></i></span>
            </div>

            <div class="form-group">
                <label for="Date">Description</label>
                <input type="text" class="form-control" name="Description" id="Description" placeholder="Description" value="@Model.Description">
            </div>

            <div class="form-group">
                <label for="Date">Active</label>
                <select type="text" class="form-control" name="Active" id="Active" placeholder="Active" value="@Model.Active">
                    <option value="Y">Active</option>
                    <option value="N">Inactive</option>
                </select>
            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" id="approve-btn" class="btn bg-primary">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>