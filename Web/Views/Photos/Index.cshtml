<!DOCTYPE html>
@model IEnumerable<Photos.Models.Album>


    <div class="page-header">
        <h1>All Albums</h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Album Name</th>
                <th>Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <a href="/Photos/ViewAlbum/@item.Id">@item.AlbumName</a>
                    </td>
                    <td>@item.AlbumDate</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>

    










