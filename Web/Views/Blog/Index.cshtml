@model IEnumerable<Photos.Models.Blog>
<div class="page-header">
    <h1>All Blogs</h1>
</div>

@foreach (var item in Model)
        {
    <div>
        <div>
            <h2>@item.Title</h2>
            <div class="btn-group pull-right" role="group" aria-label="...">
                <a class="btn btn-primary" href="/Blog/View/@item.Id" role="button"><span class="glyphicon glyphicon-eye-open"></span> View</a>
                <a class="btn btn-default" href="/Blog/Edit/@item.Id" role="button"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            </div>
        </div>
    </div>
    <div>
        <div>
            by @item.Author
            <span class="glyphicon glyphicon-time"></span> Posted on @item.DatePosted
        </div>
    </div>
    <hr>
}

<br />
<div class="btn-group" role="group" aria-label="...">
    <a class="btn btn-primary" href="/Blog/Edit/0" role="button">Create New Blog</a>
</div>

